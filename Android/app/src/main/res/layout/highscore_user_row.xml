<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.pkmmte.view.CircularImageView
        android:id="@+id/badge"
        android:layout_width="@dimen/circle_image_size"
        android:layout_height="@dimen/circle_image_size"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/circle_image_padding"
        android:padding="@dimen/circle_image_padding"
        android:scaleType="centerCrop"
        android:src="@drawable/s3logoneuweb"
        app:border_color="#EEEEEE"
        app:border_width="1dp"
        app:shadow="true"
        android:visibility="gone"/>

    <com.pkmmte.view.CircularImageView
        android:id="@+id/userimage"
        android:layout_width="@dimen/circle_image_size"
        android:layout_height="@dimen/circle_image_size"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/circle_image_padding"
        android:padding="@dimen/circle_image_padding"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_account_circle_black_48dp"
        app:border_color="#EEEEEE"
        app:border_width="1dp"
        app:shadow="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/username"
            style="@style/Base.TextAppearance.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/userpoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <TextView
        android:id="@+id/userfraction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/circle_image_padding"/>

</LinearLayout>